{
  "scanDirs": ["."],
  "excludePaths": [
    "node_modules",
    ".git",
    "vendor",
    "dist",
    "build",
    ".next",
    "*.test.*",
    "*_test.go",
    "*_test.sh",
    "test_*.sh",
    "*.bak",
    "*.tmp",
    "*.swp",
    "*.md",
    ".cursor/rules_backup*",
    "docs",
    "tests/fixtures",
    ".sentinel/*.json"
  ],
  "severityLevels": {
    "secrets": "critical",
    "console.log": "warning",
    "NOLOCK": "critical",
    "$where": "critical",
    "simplexml_load_string": "warning"
  },
  "customPatterns": {},
  "ruleLocations": [".cursor/rules"],
  "fileSize": {
    "thresholds": {
      "warning": 300,
      "critical": 500,
      "maximum": 1000
    },
    "exceptions": [
      "synapsevibsentinel.sh",
      "hub/api/main.go",
      "hub/api/security_analyzer.go",
      "hub/api/ast_analyzer.go",
      "hub/api/architecture_analyzer.go",
      "hub/processor/main.go",
      "tests/run_all_tests.sh"
    ]
  }
}
