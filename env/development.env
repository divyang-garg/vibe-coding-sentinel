# Sentinel Hub API - Development Environment Configuration
# Complies with CODING_STANDARDS.md: Environment configuration standards

# Server Configuration
HOST=0.0.0.0
PORT=8080
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s

# Database Configuration
DATABASE_URL=postgres://sentinel:password@localhost:5432/sentinel?sslmode=disable

# Security Configuration
JWT_SECRET=development-jwt-secret-change-in-production
JWT_EXPIRATION=24h
BCRYPT_COST=8

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=15m

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# LLM Configuration
OLLAMA_HOST=http://localhost:11434
AZURE_AI_ENDPOINT=
AZURE_AI_KEY=
AZURE_AI_DEPLOYMENT=claude-opus-4-5
AZURE_AI_API_VERSION=2024-02-01
LLM_REQUEST_TIMEOUT=60s
LLM_MAX_RETRIES=3
LLM_RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=debug

# Development-specific settings
DEBUG=true
HOT_RELOAD=true